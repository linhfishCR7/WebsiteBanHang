@model IEnumerable<WebsiteBanHang.Models.ItemGioHang>



@{
    ViewBag.Title = "XemGioHang";
    Layout = "~/Views/Layout/ProductLayout.cshtml";
}


@if (@Model.Count() == 0)
            {
    <h1>Giỗ hàng rỗng!</h1>
}
else
{

    foreach (var item in Model)
    {
        <div class="product">
            <div class="container">
                <div class="col-md-6 col-sm-6 cart-items">
                    <div class="cart-header">
                        <div class="close1"> </div>
                        <div class="cart-sec simpleCart_shelfItem">
                            <div class="cart-item cyc">
                                <img src="@Url.Content("~/Content/HinhAnhSP/" + item.HinhAnh)" class="img-responsive" alt="" />
                            </div>
                            <div class="cart-item-info">
                                <h3><a href="#">@item.TenSP</a><span>Model No: 3578</span></h3>
                                <ul class="qty">
                                    <li><p>Số Lượng : @item.SoLuong</p></li>
                                    <li><p>Đơn Giá : @item.DonGia</p></li>

                                </ul>

                                <div class="delivery">
                                    <p>Service Charges : Rs.100.00</p>
                                    <span>Delivered in 2-3 bussiness days</span>
                                    <div class="clearfix"></div>
                                </div>
                            </div>
                            <div class="clearfix"></div>

                        </div>
                    </div>
                </div>
                <div class="col-md-3 col-sm-3 cart-total">
                    <a class="continue" href="#">Continue to basket</a>
                    <div class="price-details">
                        <h3>Price Details</h3>
                        <span>Total</span>
                        <span class="total1">@item.ThanhTien.ToString("#,##") VNĐ</span>
                        <span>Discount</span>
                        <span class="total1">---</span>
                        <span>Delivery Charges</span>
                        <span class="total1">---</span>
                        <div class="clearfix"></div>
                    </div>
                    <ul class="total_price">
                        <li class="last_price"> <h4>TOTAL</h4></li>
                        <li class="last_price"><span>@item.ThanhTien.ToString("#,##") VNĐ</span></li>
                        <div class="clearfix"> </div>
                    </ul>


                    <div class="clearfix"></div>
                    <a class="order" href="#">Place Order</a>
                    <div class="total-item">
                        <h3>OPTIONS</h3>
                        <h4>COUPONS</h4>
                        <a class="cpns" href="#">Apply Coupons</a>
                        <p><a href="#">Log In</a> to use accounts - linked coupons</p>
                    </div>
                </div>

                <div class="clearfix"> </div>
            </div>
        </div>

    }


}

